<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    <section name="clientConfiguration" type="TestAutomation.Client.Application.ClientConfiguration, TestAutomation.Client"/>
  </configSections>
  
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <clientConfiguration>
    <VirtualMachineOperationTimeout value="60000" />
  </clientConfiguration>

  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%d{dd/MM/yyyy hh:mm:ss:}] %-5level %.64logger - %message%newline" />
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%d{dd/MM/yyyy hh:mm:ss:}] %-5level %.64logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="RollingFileAppender" />
      <appender-ref ref="ConsoleAppender" />
    </root>
  </log4net>

  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <log4net />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <extensions>
      <behaviorExtensions>
        <add name="log4net" type="TestAutomation.Client.Service.ClientBehaviorExtensionElement, TestAutomation.Client" />
      </behaviorExtensions>
    </extensions>
  </system.serviceModel>
  
</configuration>